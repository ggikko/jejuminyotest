<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingRight="10dp">

    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/btnbgcolor" />
            <solid android:color="@color/btnbgcolor" />
            <corners
                android:bottomRightRadius="@dimen/btn_round_border_bottom_right_radius"
                android:bottomLeftRadius="@dimen/btn_round_border_bottom_left_radius"
                android:topLeftRadius="@dimen/btn_round_border_top_left_radius"
                android:topRightRadius="@dimen/btn_round_border_top_right_radius"/>
        </shape>
    </item>

    <item android:bottom="1dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/btnbgcolor" />
            <solid android:color="@color/btnbgcolor" />
            <corners
                android:bottomRightRadius="@dimen/btn_round_border_bottom_right_radius"
                android:bottomLeftRadius="@dimen/btn_round_border_bottom_left_radius"
                android:topLeftRadius="@dimen/btn_round_border_top_left_radius"
                android:topRightRadius="@dimen/btn_round_border_top_right_radius"/>
        </shape>
    </item>

</layer-list>